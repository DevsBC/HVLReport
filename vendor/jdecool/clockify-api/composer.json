{
    "name": "jdecool/clockify-api",
    "type": "library",
    "description": "PHP Client for Clockify.me API",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy DECOOL",
            "email": "contact@jdecool.fr"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "php-http/client-common": "^1.7",
        "php-http/client-implementation": "^1.0",
        "php-http/discovery": "^1.4",
        "php-http/httplug": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "php-http/guzzle6-adapter": "^1.0",
        "phpstan/phpstan": "^0.11.16",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "JDecool\\Clockify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JDecool\\Clockify\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
